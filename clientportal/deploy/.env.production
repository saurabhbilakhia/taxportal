# Tax Client Portal - Production Environment Variables
# Copy this file to .env and fill in the values

# ===================
# Domain Configuration
# ===================
DOMAIN=taxportal.nanobyte.ca

# ===================
# Database Configuration
# ===================
POSTGRES_DB=clientportal
POSTGRES_USER=clientportal
# Generate a strong password: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD

# ===================
# JWT Configuration
# ===================
# Generate a 256-bit secret: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_256_BIT_SECRET_KEY
JWT_EXPIRATION=86400000

# ===================
# Stripe Configuration
# ===================
STRIPE_API_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# ===================
# Nanonets Configuration
# ===================
NANONETS_API_KEY=YOUR_NANONETS_API_KEY
NANONETS_MODEL_ID=YOUR_NANONETS_MODEL_ID

# ===================
# Email/SMTP Configuration
# ===================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@taxportal.nanobyte.ca
ACCOUNTANT_EMAIL=accountant@example.com
